<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home.HomeFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="InvalidId,ScrollViewSize">

            <Button
                android:id="@+id/IDButtonPronostico"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/pronosticoclima"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/IDButtonAvisos"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/avisos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButtonPronostico" />

            <Button
                android:id="@+id/IDButtonNume"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/numeroemergencia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButtonAvisos" />

            <Button
                android:id="@+id/IDButtonQueHacer"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/hacerencasos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButtonNume" />

            <Button
                android:id="@+id/IDButtonAtlas"
                android:layout_width="312dp"
                android:layout_height="64dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="72dp"
                android:background="@mipmap/anm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButtonMochila" />

            <Button
                android:id="@+id/IDButton_CNPD"
                android:layout_width="312dp"
                android:layout_height="64dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="72dp"
                android:background="@mipmap/cepd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButtonAtlas" />

            <Button
                android:id="@+id/IDButton_CNPC"
                android:layout_width="312dp"
                android:layout_height="64dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="72dp"
                android:background="@mipmap/cnpc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButton_CNPD" />

            <Button
                android:id="@+id/IDButtonMochila"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/mochila"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDButtonQueHacer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>